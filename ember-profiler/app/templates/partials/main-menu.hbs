{{#if showHamburger}}
  <span {{action "toggleDrawer"}} class="navbar-brand material-icons {{currentRouteName}}" id="menuButton">&#xE5D2;</span>
{{/if}}
{{#if showBackButton}}
  <div {{action "registerBackButtonClick"}} id="backButton" class="backButton">
    {{#if backButtonText}}
      <i class="material-icons">&#xE314;</i><span>{{backButtonText}}</span>
    {{else}}
      <i class="material-icons">&#xE166;</i>
    {{/if}}
  </div>

{{/if}}
<nav class="navbar-flat {{navbarClass}}" >
  <span class="navbar-brand" id="title">
    {{appTitle}}
  </span>
</nav>
{{oc-drawer open=drawerOpen logout="logout"}}
