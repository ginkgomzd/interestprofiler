<div class="full">
  <div class="pageMessage gray full">
    You're Exploring...
    <div class="clusterName">{{model.occupation.title}} : {{model.occupation.awardDescription}}</div>
  </div>

  <div class="padded">
    <div class="salaryInfo">
      <p><strong>Salary Information:</strong></p>
      <ul>
        <li>2 years before: <span class="money">{{money-format model.occupation.medianPre2}}</span></li>
        <li>2 years after: <span class="money">{{money-format model.occupation.medianPost2}}</span></li>
        <li>5 years after: <span class="money">{{money-format model.occupation.medianPost5}}</span></li>
      </ul>
    </div>
  </div>

  <div class="padded">
    {{#each program in model.programs}}
      <div class="programDesc">
        <div><strong>{{array-value model.colleges program.college "collegeName"}}</strong></div>
        <div>{{program.awardDescription}}: {{program.title}}</div>
        <div class="collegeUrl" {{action "openCollegeLink" model.colleges program.college}}>{{array-value model.colleges program.college "collegeURL"}}</div>
      </div>
      <div {{action "viewCollege" program.college}} class="programLearnMore">Tap to learn more and connect with this school.</div>
    {{/each}}
  </div>
</div>