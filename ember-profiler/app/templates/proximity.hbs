<div class="proximity-main full">

<h3>
  Search within:
<select id="ProximityDistance">
  {{#each distance in model.distances}}
    <option value="{{distance}}">{{distance}} Miles</option>
  {{/each}}
</select>
  <button {{action "findInProximity"}} class="search-icon right"><i class="material-icons">search</i></button>
</h3>
</div>
<div>
  {{#if proximityResults}}
  <ul class="collegeProximityList">
  {{#each college in proximityResults}}
    <li {{action "viewCollege" college.id}}>
      {{college.collegeName}}
      <i class="material-icons">play_arrow</i>
      <span class="distance smaller">{{college.distance}} miles</span>
      <div class="clear"></div>
    </li>
  {{/each}}
  </ul>
  {{else}}
    {{proximityResults.length}}
  <div class="center"><strong>No Results</strong></div>
  {{/if}}
</div>