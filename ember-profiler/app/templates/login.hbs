<div class="login-overlay full">
  <div class="logo-header">
    <img src="img/logo.png" class="login-logo img-responsive" />
    <h2>Here to Career</h2>
  </div>

  <div class="login-buttons">
    <button {{action "loginWithFacebook"}} class="clearButton"><span class="icon facebook">&nbsp;</span>Login with Facebook</button>
    <button {{action "loginWithLinkedIn"}} class="clearButton"><span class="icon linkedin">&nbsp;</span>Login with LinkedIn</button>
    <button {{action "loginWithTwitter"}} class="clearButton"><span class="icon twitter">&nbsp;</span>Login with Twitter</button>
    <button {{action "loginWithGoogle"}} class="clearButton"><span class="icon google">&nbsp;</span>Login with Google</button>
  </div>

  <div class="login-footer">
    <input type="email" id="login-email" placeholder="Email" />
    <input type="password" id="login-password" placeholder="Password" />
    <input type="password" id="login-password-confirm" placeholder="Confirm Password" />
    <div id="login-actions">
      <button class="right" {{action "doLogin"}}>Login</button>
      <button class="left slight" {{action "showSignup"}}>Create an Account</button>
      <br />
      <button class="left slight" {{action "showReset"}}>Forgot Password</button>
    </div>
    <div id="signup-actions">
      <button class="left" {{action "cancelSignup"}}>Cancel</button>
      <button class="right" {{action "doSignup"}}>Signup</button>
    </div>
    <div id="reset-actions">
      <button class="left" {{action "cancelReset"}}>Cancel</button>
      <button class="right" {{action "doReset"}}>Reset Password</button>
    </div>
  </div>
</div>