<?xml version='1.0' encoding='utf-8'?>
<widget id="org.younginvincibles.here2career" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" android-versionCode = "151125010">
    <name>Here to Career</name>
    <description>
        This app provides resources on California Community Colleges.
    </description>
    <author email="dev@ginkgostreet.com" href="http://www.ginkgostreet.com">
        Ginkgo Street Labs
    </author>
    <content src="index.html#/welcome" />
    <access origin="*" />
    <icon src="res/icon-72@2x.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="30000" />
    <platform name="ios">
        <preference name="BackupWebStorage" value="none"/>
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon-60.png" width="60" height="60" />
        <icon src="res/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon-76.png" width="76" height="76" />
        <icon src="res/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/icon-40.png" width="40" height="40" />
        <icon src="res/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon.png" width="57" height="57" />
        <icon src="res/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon-72.png" width="72" height="72" />
        <icon src="res/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon-small.png" width="29" height="29" />
        <icon src="res/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon-50.png" width="50" height="50" />
        <icon src="res/icon-50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="res/screen.png" idth="320" height="480"/>
        <splash src="res/screen.png" idth="640" height="960"/>
        <splash src="res/screen.png" idth="768" height="1024"/>
        <splash src="res/screen.png" idth="1536" height="2048"/>
        
        <splash src="res/screen.png" idth="1024" height="768"/>
        <splash src="res/screen.png" idth="2048" height="1536"/>
        <splash src="res/screen.png" idth="640" height="1136"/>
        <splash src="res/screen.png" idth="750" height="1334"/>
        <splash src="res/screen.png" idth="1242" height="2208"/>
        <splash src="res/screen.png" idth="2208" height="1242"/>

        <preference name="FadeSplashScreenDuration" value="1000"/>
    </platform>
    <platform name="android">
        <icon src="res/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon-xhdpi.png" density="xhdpi" />
        <icon src="res/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon-xxxhdpi.png" density="xxxhdpi" />

        <splash src="res/screen.png" density="land-hdpi"/>
        <splash src="res/screen.png" density="land-ldpi"/>
        <splash src="res/screen.png" density="land-mdpi"/>
        <splash src="res/screen.png" density="land-xhdpi"/>
        <splash src="res/screen.png" density="land-xxhdpi"/>
        <splash src="res/screen.png" density="land-xxxhdpi"/>

        <splash src="res/screen.png" density="port-hdpi"/>
        <splash src="res/screen.png" density="port-ldpi"/>
        <splash src="res/screen.png" density="port-mdpi"/>
        <splash src="res/screen.png" density="port-xhdpi"/>
        <splash src="res/screen.png" density="port-xxhdpi"/>
        <splash src="res/screen.png" density="port-xxxhdpi"/>
        
        <preference name="SplashScreenDelay" value="30000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
    </platform>
    <platform name="amazon-fireos">
        <icon src="res/icon-ldpi.png" density="ldpi" />
        <icon src="res/icon-mdpi.png" density="mdpi" />
        <icon src="res/icon-hdpi.png" density="hdpi" />
        <icon src="res/icon-xhdpi.png" density="xhdpi" />
        <icon src="res/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon-xxxhdpi.png" density="xxxhdpi" />

        <splash src="res/screen.png" density="land-hdpi"/>
        <splash src="res/screen.png" density="land-ldpi"/>
        <splash src="res/screen.png" density="land-mdpi"/>
        <splash src="res/screen.png" density="land-xhdpi"/>
        <splash src="res/screen.png" density="land-xxhdpi"/>
        <splash src="res/screen.png" density="land-xxxhdpi"/>

        <splash src="res/screen.png" density="port-hdpi"/>
        <splash src="res/screen.png" density="port-ldpi"/>
        <splash src="res/screen.png" density="port-mdpi"/>
        <splash src="res/screen.png" density="port-xhdpi"/>
        <splash src="res/screen.png" density="port-xxhdpi"/>
        <splash src="res/screen.png" density="port-xxxhdpi"/>
    </platform>
</widget>
